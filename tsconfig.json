{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5"],
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "downlevelIteration": true,
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "files": [
    "src/cli.ts",
    "src/cli-ui.ts",
    "src/ec2-types.ts",
    "src/lib.ts",
    "src/product-description.ts",
    "src/regions.ts"
  ],
  "exclude": ["node_modules"]
}
