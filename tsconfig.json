{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "downlevelIteration": true,
    "rootDir": ".",
    "sourceRoot": "src",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "types",
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
