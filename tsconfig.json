{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5"],
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "downlevelIteration": true,
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", "util", "test", "src/*.spec.ts"]
}
